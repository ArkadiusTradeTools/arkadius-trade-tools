<?xml version="1.0" encoding="utf-8"?>
<Bindings
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://sir.insidi.at/or/schema/esobindings.xsd">
    <Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
        <Category name="Arkadius' Trade Tools">
            <Action name="ATT_TOGGLE_POPUP_TOOLTIP">
                <Down>
                    ArkadiusTradeTools.Modules.Sales.OpenHoveredItemTooltip()
				</Down>
            </Action>
            <Action name="ATT_STR_ENABLE_TOOLTIP_EXTENSIONS">
                <Down>
                    ArkadiusTradeTools.Modules.Sales.TooltipExtensions:Enable(not ArkadiusTradeTools.Modules.Sales.TooltipExtensions:IsEnabled())
				</Down>
            </Action>
            <Action name="ATT_STR_ENABLE_TOOLTIP_EXTENSIONS_GRAPH">
                <Down>
                    ArkadiusTradeTools.Modules.Sales.TooltipExtensions:EnableGraph(not ArkadiusTradeTools.Modules.Sales.TooltipExtensions:IsGraphEnabled())
				</Down>
            </Action>
        </Category>
    </Layer>
</Bindings>